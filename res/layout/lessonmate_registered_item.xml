<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:gravity="center_vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="10dp"
    android:paddingRight="12dp"
    android:paddingTop="8dp" >

    <com.example.ahut_view.CircleImageView
        android:id="@+id/ivAvatar"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/noavatar" />

    <TextView
        android:id="@+id/tvXM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivAvatar"
        android:ellipsize="end"
        android:maxWidth="66dp"
        android:singleLine="true"
        android:text="任震"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvBJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvXM"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/ivAvatar"
        android:text="计111"
        android:textColor="#444"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvZY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tvBJ"
        android:layout_toRightOf="@id/tvBJ"
        android:text="计算机学院"
        android:textColor="#444"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvSignature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvBJ"
        android:layout_toRightOf="@id/ivAvatar"
        android:ellipsize="end"
        android:lines="1"
        android:minLines="1"
        android:text="个性签名啊签名个性签名啊签名个性签名啊签名个性签名啊签名个性签名啊签名"
        android:textColor="#666"
        android:textSize="14sp" />

</RelativeLayout>