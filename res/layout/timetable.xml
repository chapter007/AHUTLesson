<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="时间设置"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="本学期开学日期:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/etBeginDate_year"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="time" >
        </EditText>

        <EditText
            android:id="@+id/etBeginDate_month"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="time" >
        </EditText>

        <EditText
            android:id="@+id/etBeginDate_day"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="time" >
        </EditText>
    </LinearLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="载入时间表"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="22dp" />

        <Spinner
            android:id="@+id/spinnerSetMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="早上前两节:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/time_begin0"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="time" >
        </EditText>

        <EditText
            android:id="@+id/time_end0"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="time" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="早上后两节:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/time_begin1"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="time" >
        </EditText>

        <EditText
            android:id="@+id/time_end1"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="time" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="下午前两节:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/time_begin2"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="time" >
        </EditText>

        <EditText
            android:id="@+id/time_end2"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="time" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="下午后两节:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/time_begin3"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="time" >
        </EditText>

        <EditText
            android:id="@+id/time_end3"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="time" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="晚上:            "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/time_begin4"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="time" >
        </EditText>

        <EditText
            android:id="@+id/time_end4"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="time" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnSubmitTimeTable"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="更新时间表" />
    </LinearLayout>

</LinearLayout>