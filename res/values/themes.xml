<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:Theme.Holo.Light.DarkActionBar">
        <item name="themeColor">@color/theme</item>
        <!-- Text -->
        <item name="textColor">@color/primary_text_dark</item>
        <item name="textColorHint">@color/secondary_text_dark</item>
        <item name="textColorTitle">@color/primary_text_dark</item>
        <item name="dialogBackground">@drawable/dialog_background_material</item>

        <item name="android:textColorPrimaryDisableOnly">?attr/textColor</item>

        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Medium</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.Large</item>
        <item name="android:windowBackground">@color/background_light</item>

        
    </style>
	<style name="AppTheme.Dialog">
        <!-- Text -->
        <item name="textColor">@color/secondary_text_dark</item>
        <item name="textColorTitle">@color/primary_text_dark</item>
        <item name="android:editTextColor">?attr/textColor</item>

        <item name="android:textViewStyle">@style/TextView.Dialog</item>
        <item name="android:editTextStyle">@style/EditText.Dialog</item>

        <item name="android:textAppearance">@style/TextAppearance.LittleSmall</item>

        <!-- spinner -->
        <item name="android:spinnerDropDownItemStyle">@style/DropDownItem.Spinner</item>
        <item name="android:spinnerItemStyle">@style/DropDownItem.Spinner</item>
    </style>

    <style name="AppTheme.Dark" parent="@android:Theme.Holo">
        <item name="themeColor">@color/theme_dark</item>
        <!-- Text -->
        <item name="textColor">@color/primary_text_light</item>
        <item name="textColorHint">@color/secondary_text_light</item>
        <item name="textColorTitle">@color/primary_text_light</item>
        <item name="dialogBackground">@drawable/dialog_background_material_dark</item>

        <item name="android:textColorPrimaryDisableOnly">?attr/textColor</item>

        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Medium</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.Large</item>
        <item name="android:windowBackground">@color/background_dark</item>
  
        </style> 
        
    <style name="AppTheme.Dark.Dialog">
        <!-- Text -->
        <item name="textColor">@color/secondary_text_light</item>
        <item name="textColorTitle">@color/primary_text_light</item>
        <item name="android:editTextColor">?attr/textColor</item>

        <item name="android:textViewStyle">@style/TextView.Dark.Dialog</item>
        <item name="android:editTextStyle">@style/EditText.Dark.Dialog</item>

        <item name="android:textAppearance">@style/TextAppearance.LittleSmall</item>

        <!-- spinner -->
        <item name="android:spinnerDropDownItemStyle">@style/DropDownItem.Spinner</item>
        <item name="android:spinnerItemStyle">@style/DropDownItem.Spinner</item>
    </style>
</resources>
