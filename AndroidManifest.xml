<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ahutlesson.android"
    android:versionCode="14"
    android:versionName="2.0" >

    <application
        android:icon="@drawable/ahutlesson"
        android:label="@string/app_name"
        android:theme="@style/AHUTLesson" >
        <activity
			android:name=".MainActivity" 
			android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="新用户注册向导"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="登录账号"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".TimetableViewerActivity"
            android:label="课表浏览器" >
        </activity>
        <activity
            android:name=".LessonActivity"
            android:label="课程讨论" 
			android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name=".ThreadActivity"
            android:label="查看帖子" >
        </activity>
        <activity
            android:name=".MessageActivity"
            android:label="我的消息" >
        </activity>
        <activity
            android:name=".NoticeActivity"
            android:label="我的提醒" >
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="个人资料" >
        </activity>
        <activity
            android:name=".UserActivity"
            android:label="查看资料" >
        </activity>
        <activity
            android:name=".NewThreadActivity"
            android:label="发表帖子" 
			android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name=".NewMessageActivity"
            android:label="发送消息" 
			android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name=".LessonDetailActivity"
            android:label="课程详情" 
			android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name=".PreferenceActivity"
            android:label="设置"
        	android:theme="@style/Theme.Sherlock" >
        </activity>
        <activity
            android:name=".TimetableSettingActivity"
            android:label="时间表设置"
			android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="com.ahutlesson.android.TIMETABLESETTINGACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditLessonActivity"
            android:label="编辑课程"
			android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="关于" >
            <intent-filter>
                <action android:name="com.ahutlesson.android.ABOUTACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ahutlesson.android.AlarmActivity"
            android:label="上课提醒"
            android:theme="@style/Theme.Sherlock.Light.Dialog" >
        </activity>

        <receiver
            android:name="com.ahutlesson.android.alarm.AlarmReceiver"
            android:process=":remote" />
        <receiver
            android:name="com.ahutlesson.android.alarm.SoundSilentReceiver"
            android:process=":remote" />
        <receiver
            android:name="com.ahutlesson.android.alarm.SoundNormalReceiver"
            android:process=":remote" />
        
		<service android:name="com.ahutlesson.android.service.CheckUnreadService"/>
		
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="511dbbfd52701523af00002e" >
        </meta-data>
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="Default" />
    </application>

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="14"/>

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>